{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "client",
            "image": "codergogoi/multi-client",
            "hostname": "client",
            "essential": false
        },
        {
            "name": "server",
            "image": "codergogoi/multi-server",
            "hostname": "api",
            "essential": false
        },
        {
            "name": "worker",
            "image": "codergogoi/multi-worker",
            "hostname": "worker",
            "essential": false
        },
        {
           "name": "nginx",
           "image": "codergogoi/multi-nginx",
           "hostname": "nginx",
           "essential": true,
           "portMappings": [
               {
                   "hostPort": 80,
                   "containerPort": 80
               }
           ],
           "links": ["client", "server"]
        }
    ]
}